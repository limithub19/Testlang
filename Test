local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- üì¶ UI Parent
local screenGui = Instance.new("ScreenGui", game.CoreGui)
screenGui.Name = "ZenLoaderGUI"
screenGui.ResetOnSpawn = false

-- ü™ü Main Frame
local Frame = Instance.new("Frame", screenGui)
Frame.Size = UDim2.new(0, 360, 0, 270)
Frame.Position = UDim2.new(0.5, -180, 0.5, -135)
Frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
Frame.BorderSizePixel = 0
Frame.Visible = true

local UICorner = Instance.new("UICorner", Frame)
UICorner.CornerRadius = UDim.new(0, 10)

-- üå± Title
local Title = Instance.new("TextLabel", Frame)
Title.Size = UDim2.new(1, 0, 0, 40)
Title.Position = UDim2.new(0, 0, 0, 0)
Title.Text = "üå± Zen Garden Utility üå±"
Title.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.Font = Enum.Font.GothamBold
Title.TextSize = 20

-- üé≤ Roll Button
local RollButton = Instance.new("TextButton", Frame)
RollButton.Text = "üé≤ Roll Seed"
RollButton.Size = UDim2.new(0.9, 0, 0, 50)
RollButton.Position = UDim2.new(0.05, 0, 0, 60)
RollButton.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
RollButton.Font = Enum.Font.SourceSansBold
RollButton.TextSize = 22

-- üß¨ Mutate Button
local MutateButton = Instance.new("TextButton", Frame)
MutateButton.Text = "üß¨ Mutate Pet"
MutateButton.Size = UDim2.new(0.9, 0, 0, 50)
MutateButton.Position = UDim2.new(0.05, 0, 0, 120)
MutateButton.BackgroundColor3 = Color3.fromRGB(140, 0, 180)
MutateButton.Font = Enum.Font.SourceSansBold
MutateButton.TextSize = 22

-- üìÑ Output Label
local OutputLabel = Instance.new("TextLabel", Frame)
OutputLabel.Text = "üåº Ready to mutate or roll!"
OutputLabel.Size = UDim2.new(0.9, 0, 0, 60)
OutputLabel.Position = UDim2.new(0.05, 0, 0, 190)
OutputLabel.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
OutputLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
OutputLabel.Font = Enum.Font.SourceSans
OutputLabel.TextSize = 18
OutputLabel.TextWrapped = true

-- ‚ò∞ Toggle Button (Always Visible)
local ToggleButton = Instance.new("TextButton", screenGui)
ToggleButton.Size = UDim2.new(0, 40, 0, 40)
ToggleButton.Position = UDim2.new(0, 10, 1, -60)
ToggleButton.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
ToggleButton.Text = "‚ò∞"
ToggleButton.TextColor3 = Color3.new(1, 1, 1)
ToggleButton.Font = Enum.Font.GothamBold
ToggleButton.TextSize = 24

local toggleCorner = Instance.new("UICorner", ToggleButton)
toggleCorner.CornerRadius = UDim.new(1, 0)

-- üå± Seed + Mutation Tables
local seeds = {
    "Sunflower Seed", "Cactus Seed", "Magic Bean",
    "Glowroot", "Frozen Fern", "Dark Petal"
}

local mutations = {
    "Gold", "Rainbow", "Wet", "Shocked", "Chilled", "Frozen",
    "Moonlit", "Bloodlit", "Celestial", "Zombified", "Disco",
    "Plasma", "Twisted", "Voidtouched", "Pollinated",
    "HoneyGlazed", "Heavenly", "Choc", "Meteoric", "Burnt",
    "Cooked", "Molten", "Dawnbound", "Alienlike", "Galactic",
    "Verdant", "Paradisal", "Sundried", "Windstruck", "Drenched",
    "Wilt", "Wiltproof", "Aurora", "Fried", "Cloudtouched",
    "Sandy", "Clay", "Ceramic", "Amber", "OldAmber",
    "AncientAmber", "Tempestuous", "Friendbound", "Infected",
    "Tranquil", "Chakra", "Foxfire Chakra", "Radioactive"
}

-- üé≤ Roll Seed Function
local function rollSeed()
	local s = seeds[math.random(#seeds)]
	OutputLabel.Text = "üå± You rolled: " .. s
end

-- üß¨ Mutate Pet Function
local function mutatePet()
	local m = mutations[math.random(#mutations)]
	OutputLabel.Text = "üêæ Pet mutated with: " .. m
end

-- Button Click Events
RollButton.MouseButton1Click:Connect(rollSeed)
MutateButton.MouseButton1Click:Connect(mutatePet)

-- üîÅ Toggle UI Visibility
local isVisible = true

ToggleButton.MouseButton1Click:Connect(function()
	isVisible = not isVisible
	Frame.Visible = isVisible
end)
